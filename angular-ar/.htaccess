<IfModule mod_rewrite.c>
  RewriteEngine On

  # --- SPA support for Angular under /update/angular-ar/ ---
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} ^/update/angular-ar/
  RewriteRule ^update/angular-ar/.*$ /update/angular-ar/index.html [L]

  # --- allow normal PHP and assets to load ---
</IfModule>
